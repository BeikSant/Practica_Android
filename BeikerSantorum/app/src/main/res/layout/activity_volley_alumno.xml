<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityVolleyAlumno"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtIdAlumnoVolley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Cedula" />

    <EditText
        android:id="@+id/txtNombreAlumnoVolley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/txtDireccionAlumnoVolley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Direccion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGuardarVolley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnBuscarTodosVolley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar Todos" />

    </LinearLayout>

    <TextView
        android:id="@+id/lblDatosAlumnoVolley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos" />

</LinearLayout>