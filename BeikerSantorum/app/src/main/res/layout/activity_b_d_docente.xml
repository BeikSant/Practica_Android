<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBDDocente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtCedulaDBHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Cedula" />

        <EditText
            android:id="@+id/txtApellidosDBHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Apellidos" />

        <EditText
            android:id="@+id/txtNombresDBHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombres" />

        <TextView
            android:id="@+id/lblDatosDBHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGuardarDBHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar" />

            <Button
                android:id="@+id/btnModificarDBHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificar" />

            <Button
                android:id="@+id/btnEliminarCedulaDBHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar C" />

            <Button
                android:id="@+id/btnEliminarTodosDBHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar" />

            <Button
                android:id="@+id/btnBuscarDBHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar" />

            <Button
                android:id="@+id/btnBuscarTodosDBHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar T" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDocente"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>